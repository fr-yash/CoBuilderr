# Backend Environment Variables
# Copy this file to .env for local development
# For production, set these variables in your hosting platform (e.g., Render)

# Server Configuration
PORT=3001

# Database Configuration
MONGO_URI=mongodb://localhost:27017/cobuilder

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Google AI Configuration
GOOGLE_API_KEY=your-google-ai-api-key

# Redis Configuration (if using Redis)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# CORS Configuration
# Add your frontend URLs here (comma-separated)
FRONTEND_URLS=http://localhost:5173,http://localhost:5174

# For production, add your deployed frontend URL
# FRONTEND_URLS=https://your-frontend-app.onrender.com 